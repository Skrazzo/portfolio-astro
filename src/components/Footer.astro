---
import { Image } from "astro:assets";
import icon from "~assets/icon.png";
import FooterSocialLink from "./FooterSocialLink.astro";

interface Props {
    className?: string;
}

const { className = "" }: Props = Astro.props;

// Check if current path includes about-me
const isAboutMe = Astro.url.pathname.includes("about-me");
const isProjects = /projects|contact/.test(Astro.url.pathname);
---

<footer
    class=`w-full md:max-w-[1200px] mx-auto max-md:py-8 p-5 md:rounded-t-xl backdrop-blur-2xl bg-panel-background-lighter md:bg-panel-background border-t-2 md:border-2 border-panel-border flex max-md:flex-col max-md:gap-6 items-center md:justify-between ${className}`
>
    <div class="sitemap-links hidden text-light md:flex gap-5 items-center font-bold">
        <a href="/">
            <Image
                src={icon}
                width={52}
                height={52}
                alt={"Site icon"}
                class={"rounded-md border border-panel-border-lighter cursor-pointer"}
            />
        </a>
        {
            !isAboutMe && (
                <a class="hover:underline" href="/about-me">
                    Leons - About Me
                </a>
            )
        }
        {
            !isProjects && (
                <a class="hover:underline" href="/projects">
                    Leons - My Projects
                </a>
            )
        }
    </div>

    <div class="flex flex-col items-center gap-4 font-semibold text-light text-sm md:hidden">
        <a href="/contact">Contact me</a>
        <a href="/projects">My projects</a>
        <a href="/about-me">About me</a>
    </div>

    <div class="md:hidden border-t border-panel-border-lighter w-[140px]"></div>

    <div class="flex items-center gap-3">
        <FooterSocialLink
            iconName="upwork"
            href="https://www.upwork.com/freelancers/~01f0a43601fa270a7d?mp_source=share"
        />
        <FooterSocialLink iconName="githubAccount" href="https://github.com/Skrazzo" />
        <FooterSocialLink iconName="instagram" href="https://www.instagram.com/skrazzo/" />
        <FooterSocialLink iconName="linkedin" href="https://www.linkedin.com/in/leons-aleksandrovs-37304b270" />

        <a
            href="/contact"
            class="max-md:hidden text-mobile-lg py-4 px-7 uppercase font-bold bg-gradient-to-br from-light to-accent-light rounded-lg"
        >
            Contact me
        </a>
    </div>
</footer>

<style>
    .sitemap-links {
        font-size: var(--text-sm);
    }
</style>
