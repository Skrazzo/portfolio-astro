---
import { Icon } from "astro-icon/components";

interface Props {
    href: string;
    icon: string;
    target: HTMLAnchorElement["target"];
}

const props: Props = Astro.props;
---

<a
    href={props.href}
    target={props.target}
    class="flex items-center gap-[6px] px-3 py-1 font-semibold rounded-lg bg-panel-background border-2 border-panel-border hover:scale-105 duration-150"
>
    <Icon name={props.icon} />
    <slot />
</a>
