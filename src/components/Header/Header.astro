---
interface Props {
    iconName: string;
}

const { iconName = "menu" }: Props = Astro.props;

import { Icon } from "astro-icon/components";
import HeaderLink from "./HeaderLink.astro";
---

<header class="flex max-md:flex-wrap md:justify-between items-center py-8 px-16">
    <div
        class="menu-button md:hidden mr-3 p-[6px] bg-panel-background border-2 border-panel-border rounded-md cursor-pointer"
    >
        <Icon stroke-width={3} class={"text-light"} name={iconName} />
    </div>
    <div class="flex items-center gap-3">
        <h2 class="text-gradient font-bold title-gradient-down uppercase">skrazzo.xyz</h2>
        <span class="text-dimmer uppercase font-semibold text-xs border-2 border-dimmer rounded-[3px] px-1.5"
            >portfolio</span
        >
    </div>
    <nav class="max-md:mt-8 max-md:flex-col max-md:w-full flex gap-4 md:items-center md:gap-2 md:text-center lg:gap-8">
        <HeaderLink name="About me" href="/about-me" />
        <HeaderLink name="My projects" href="/projects" />
        <HeaderLink name="Contact me" href="/contact" />
    </nav>
</header>

<style>
    header {
        padding: var(--padding-y) var(--padding-x);
    }

    h2 {
        font-size: clamp(var(--text-mobile-lg), 7vw, var(--text-lg));
    }

    span {
        font-size: clamp(var(--text-mobile-xs), 3vw, var(--text-xs));
    }

    svg {
        width: clamp(24px, 7vw, 36px);
        height: clamp(24px, 7vw, 36px);
    }
</style>
